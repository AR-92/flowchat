{
  "name": "flowchat-website",
  "version": "1.0.0",
  "description": "FlowChat - AI Automation Solutions Website",
  "type": "module",
  "scripts": {
    "dev": "kill-port 3000 && concurrently \"vite --port 3000\" \"npm run tailwind\"",
    "build": "npm run tailwind-build && npm run minify-js && vite build && node post-build.cjs",
    "preview": "vite preview",
    "tailwind": "npx tailwindcss -i ./assets/css/input.css -o ./assets/css/output.css --watch",
    "tailwind-build": "npx tailwindcss -i ./assets/css/input.css -o ./assets/css/output.css",
    "minify-js": "terser assets/js/index-orbs.js -o assets/js/index-orbs.min.js -c -m && terser assets/js/main.js -o assets/js/main.min.js -c -m && terser assets/js/pricing-config.js -o assets/js/pricing-config.min.js -c -m",
    "lint": "eslint assets/js/index-orbs.js assets/js/main.js assets/js/pricing-config.js",
    "lint:fix": "eslint assets/js/index-orbs.js assets/js/main.js assets/js/pricing-config.js --fix",
    "format": "prettier --write assets/js/index-orbs.js assets/js/main.js assets/js/pricing-config.js"
  },
  "keywords": [
    "website",
    "tailwindcss",
    "html",
    "css",
    "javascript"
  ],
  "author": "FlowChat Team",
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "imagemin-cli": "^8.0.0",
    "kill-port": "^2.0.1",
    "postcss": "^8.4.24",
    "prettier": "^3.6.2",
    "purgecss": "^7.0.2",
    "tailwindcss": "^3.3.2",
    "terser": "^5.44.0",
    "vite": "^4.3.9"
  }
}
