{
  "name": "ws",
  "version": "1.0.0",
  "description": "Professional test setup for HTML validation",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:structure": "jest tests/unit/root-structure-validation.test.js",
    "test:assets": "jest tests/unit/asset-validation.test.js",
    "test:path": "jest tests/unit/path-resolution.test.js",
    "validate:html": "node scripts/validate-html.js",
    "validate:assets": "node scripts/validate-assets.js",
    "validate:git": "node scripts/validate-git-setup.js",
    "analyze:css": "node scripts/css-migration-helper.js",
    "organize:root": "node scripts/organize-root.js",
    "lint": "eslint . --ext .js --ignore-pattern src/assets/js/svg-loader-static.js --ignore-pattern scripts/css-migration-helper.js --ignore-pattern tests/unit/framework-migration-helper.test.js --ignore-pattern index.html",
    "lint:fix": "eslint . --ext .js --fix --ignore-pattern src/assets/js/svg-loader-static.js --ignore-pattern scripts/css-migration-helper.js --ignore-pattern tests/unit/framework-migration-helper.test.js --ignore-pattern index.html",
    "lint:auto-fix": "node scripts/fix-linting.js",
    "format": "prettier --write . '!src/assets/js/svg-loader-static.js' '!scripts/css-migration-helper.js' '!tests/unit/framework-migration-helper.test.js' '!index.html'",
    "format:check": "prettier --check . '!src/assets/js/svg-loader-static.js' '!scripts/css-migration-helper.js' '!tests/unit/framework-migration-helper.test.js' '!index.html'"
  },
  "keywords": [
    "test",
    "html",
    "validation",
    "css",
    "migration"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "jsdom": "^22.0.0",
    "prettier": "^3.6.2"
  }
}
